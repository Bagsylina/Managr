@{
    ViewBag.Title = "All projects";
}

@if (ViewBag.Message != null)
{
    <div class="alert @ViewBag.Alert p-3 rounded-3 text-center mb-5">
        @ViewBag.Message
    </div>
}

<h1>Projects</h1>

<a class="btn btn-outline-success" href="/Projects/New">
    <i class="bi bi-tools"></i>
    Start a project!
</a>

<form method="GET">
    <div class="input-group mb-3">
        <input type="text" class="form-control" placeholder="Search in project name" name="search" value="@ViewBag.SearchString">
        <button class="btn btn-outline-success" type="submit">Search Project</button>
    </div>
</form>

<div>
    @if (ViewBag.CntPages > 1)
    {
        string searchQuery = "";
        if (ViewBag.SearchString != null)
        {
            searchQuery = "search=" + ViewBag.SearchString + "&";
        }
        for (int i = 0; i < ViewBag.CntPages; ++i)
        {
            if (i != ViewBag.PageId)
            {
                <a href="/Projects/Index?@(searchQuery)page=@(i)" class="btn btn-secondary">
                    @(i + 1)
                </a>
            }
            else
            {
                <span class="btn btn-primary">
                    @(i + 1)
                </span>
            }
        }
    }
</div>

@foreach (Managr.Models.Project proj in ViewBag.Proiecte)
{
    <div class="card">
        <div class="card-body">
            <h3 class="card-title alert-primary py-3 px-3 rounded-2">
                @proj.Name
            </h3>

            <div class="card-text">
                @proj.Description
            </div>

            <div class="d-flex justify-content-around flex-row mt-5">
                <div class="d-flex flex-column justify-content-center">
                    <a class="btn btn-success" href="/Projects/Show/@proj.Id">
                        Open project
                    </a>
                </div>

                <div class="d-flex flex-column">
                    <div class="alert-dark d-flex justify-content-between">
                        <i class="bi bi-gear"></i>
                        Project maintained by
                        <i class="bi bi-gear"></i>
                    </div>
                    @if (@proj.Organizer != null)
                    {
                        <div class="alert-dark d-flex justify-content-between">
                            <i class="bi bi-person"></i>
                            @proj.Organizer.UserName
                            <i class="bi bi-person"></i>
                        </div>
                    }
                    else
                    {
                        <div class="alert-danger">
                            There was an error getting project data. We suggest contacting an admin
                        </div>
                    }
                    <div class="alert-dark d-flex justify-content-between">
                        <i class="bi bi-pencil"></i>
                        and started on
                        <i class="bi bi-pencil"></i>
                    </div>
                    <span class="alert-dark d-flex justify-content-between">
                        <i class="bi bi-calendar-heart"></i>
                        @proj.CreationDate
                        <i class="bi bi-calendar-heart"></i>
                    </span>
                </div>
            </div>
        </div>
    </div>

    <br />
}