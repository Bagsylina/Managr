@{
    ViewBag.Title = "All projects";
}

@*
    A prettier Index will be added
*@

@if (ViewBag.Message != null)
{
    <div class="alert @ViewBag.Alert p-3 rounded-3 text-center mb-5">
        @ViewBag.Message
    </div>
}

<h1>Projects</h1>

@foreach(Managr.Models.Project proj in ViewBag.Proiecte)
{
    <div class="card">
        <div class="card-body">
            <h3 class="card-title alert-primary py-3 px-3 rounded-2">
                @proj.Name
            </h3>

            <div class="card-text">
                @proj.Description
            </div>

            <div class="d-flex justify-content-between flex-row mt-5">
                <div>
                    <i class="bi bi-person"></i>
                    @proj.Organizer.UserName
                </div>

                <i class="bi bi-calendar-heart"></i>
                <span class="alert-warning">
                    @proj.CreationDate
                </span>
            </div>
        </div>

        <br />

        <a class="btn btn-success" href="/Projects/Show/@proj.Id">
            Open project
        </a>
    </div>
}

<a class="btn btn-outline-success" href="/Projects/New">
    <i class="bi bi-tools"></i>
    Start a project!
</a>